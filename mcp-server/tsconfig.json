{
    "compilerOptions": {
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "bundler",  
      "target": "ES2020",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "noImplicitAny": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
